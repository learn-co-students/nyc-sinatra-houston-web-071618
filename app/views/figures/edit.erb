<h1>Edit Figure</h1>
<form action="/figures/<%= @figure.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">

  <p>Name: <input id="figure_name" name="figure[name]" value="<%= @figure.name %>"></p>

  <p>Edit Titles:</p>
  <% Title.all.each do |title| %>
  <p><input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>>
  <%= title.name %></p>
  <% end %>
  <h2>Create New Title:</h2>
  <p><input id="new_title" name="title[name]"></p>
  <br></br>

  <p>Edit Landmarks:</p>
  <% Landmark.all.each do |landmark| %>
  <p><input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>>
  <%= landmark.name %></p>
  <% end %>
  <br></br>
  <h2>Create New Landmark:</h2>
  <p>Name:<input id="new_landmark" name="landmark[name]">  Year:<input name="landmark[year_completed]"></p>
  <br></br>

  <input type="submit" value="Edit Figure">


</form>
