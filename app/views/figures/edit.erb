<h1>Edit Figures:</h1><br>

<form action="/figures/<%=@figure.id%>" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">
<label for="figure_name" type="text" id="figure_name">Name</label>
<input type="text"  name="figure[name]" id="figure_name" value="<%=@figure.name%>"><br>

  <%Landmark.all.each do |landmark|%>
  <label><%=landmark.name%></label>
  <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>"><br>
  <%end%>
  <label>Add New Landmark:</label>
 <input type="text" id="new_landmark" name="landmark[name]"><br>


<label><h4>Edit Titles</h4></label>
<% Title.all.each do |title| %>
<label><%=title.name%></label>
<input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>"><br>
<%end%><br>
<label>Add New Title:</label>
 <input type="text" id="new_title" name="title[name]"><br>



<input type="submit" value="Edit Figure">

</form>