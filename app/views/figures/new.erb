<h1>Create a new Figure</h1>

<form action = "/figures" method = "POST">
	<label>Name: </label>
	<br></br>

	<input type="text" id="figure_name" name="figure[name]">

	<br></br>

	<h2>Titles</h2>
	 <% @titles.each do |title| %>
  <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>">
  		<%=title.name%>
  		<br></br>
  </input>
  <%end%>
	
	<br></br>
	<label>Create New Title:</label>
	<br></br>
	<input type="text" id="new_title" name="title[name]"></input>
	


		<h2>Landmarks</h2>
	 <% @landmarks.each do |landmark| %>
  <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>">
  		<%=landmark.name%>
  		<br></br>
  </input>
  <%end%>


	<label>Create New Landmark:</label>
	<br></br>
	<label>Name: </label>
	<input type="text" id="new_landmark" name="landmark[name]"></input>
	<br></br>
	<label>Year: </label>
	<input type="text" name="landmark[year_completed]"></input>
	

	<input type="submit" value="Create New Figure">

</form>	